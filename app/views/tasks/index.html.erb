<div class="container">

<h1>My Tasks</h1>

<ul class="list-group list-group-flush col-4">
  <% @tasks.each do |task| %>
    <li class="list-group-item"> <% if task.completed == false %>
    <i class="fa-regular fa-square px-2"></i>
    <% else %>
    <i class="fa-solid fa-square-check px-2"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %> - <%= link_to "❌", task_path(task), data:{turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %></li>
  <% end %>
</ul>
<br>
<%= link_to "Add a new task", new_task_path %>

</div>
